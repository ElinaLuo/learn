@import '~@seed/ui-base/style/base.less';

.loadingContainer {
    width: 100%;
    display: flex;
    &.v_center{
        justify-content: center;
        height: 100vh;
    }
    @keyframes loading {
        0% {
            transform: rotate(0)
        }

        50% {
            transform: rotate(180deg)
        }

        to {
            transform: rotate(1turn)
        }
    }

    .loadWrap {
        height: 90 * @rem;
        line-height: 90 * @rem;
        font-size: 28 * @rem;
        text-align: center;
        color: #ddc195;
        width: 100%;
        .loadingImg {
            vertical-align: middle;
            margin-right: 10 * @rem;
            width: 50 * @rem;
            height: 50 * @rem;
            display: inline-block;
            background-image: url("../style/loading@2x.png");
            background-repeat: no-repeat;
            background-size: 50 * @rem;
            transform-origin: center center;
            animation: loading 1s linear infinite;
        }
        @media only screen and (-webkit-device-pixel-ratio: 3) {
            .loadingImg {
                background-image: url("../style/loading@3x.png");
            }
        }

    }
}