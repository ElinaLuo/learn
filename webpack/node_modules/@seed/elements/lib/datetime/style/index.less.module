@import '~@seed/ui-base/style/base.less';
@import '~@seed/ui-base/style/util.less';
@color-awaiting:#ffa384;
@color-disable:#CCC;

.btn{
    display: inline-block;
    min-width: 106 * @rem;
    min-height: 50 * @rem;
    border-radius: 25 * @rem;
    font-size: 32 * @rem;
    text-align: center;
    padding:0 26 * @rem;
}
.btn(@background,@color){
    background-color: @background;
    color: @color;
    // border:@border;
}
.retina-border-radius(@radius){
    &::before{
        border-radius: @radius*2;
    }
}
.size(@font,@height,@width,@borderRadius){
    font-size: @font;
    height:@height;
    line-height: @height;
    width:@width;
    border-radius: @borderRadius;
    .retina-border-radius(@borderRadius);
}
//color 不同状态下的按钮
.btn1{
    //正常状态一级
    .btn(@color-text-inform,@color-text-white);
}
.btn2{
    //二级
    .btn(@color-text-white,@color-text-inform);
    .retina-border(border,0,@color-text-inform);
}
.btn3{
    //三级
    .btn(@color-text-white,@color-text-main);
    .retina-border(border,0,@color-text-disabled);
}

.btn1_await{
    //一级
    .btn(@color-awaiting,rgba(255,255,255,.8));
}
.btn2_await{
    //二级
    .btn(@color-text-white,@color-awaiting);
    .retina-border(border,0,@color-awaiting);
}
.btn3_await{
    //三级
    .btn(@color-text-white,@color-text-disabled);
    .retina-border(border,0,@color-text-disabled);
}
.btn_disable{
    //三级
    .btn(@color-disable,@color-text-white);
}

.size_s{
    .size(26*@rem,50*@rem,auto,25*@rem);
}
.size_m{
    .size(32*@rem,80*@rem,auto,40*@rem);
}
.size_l{
    .size(36*@rem,90*@rem,auto,45*@rem);
}
.test_module{
    color:red;
}