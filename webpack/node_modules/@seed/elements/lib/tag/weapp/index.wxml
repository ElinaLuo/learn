<!-- 服务标签 -->
<block wx:if="{{type === 'service'}}">
    <view class="seed-tag seed-tag-{{type}} seed-tag-{{type}}-{{value}}">{{serviceTextMap[value] || '' }}</view>
</block>
<!-- 排行榜 -->
<block wx:if="{{type === 'ranking-horizontal'}}">
    <view class="seed-tag seed-tag-{{type}} seed-tag-ranking-{{value < 4 ? 'red' : 'yellow'}}">TOP {{value}}</view>
</block>
<block wx:if="{{type === 'ranking-vertical'}}">
    <view class="seed-tag seed-tag-{{type}} seed-tag-ranking-{{value < 4 ? 'red' : 'yellow'}}">
        <view class="seed-tag-ranking-vertical-top">TOP</view>
        <view class="seed-tag-ranking-vertical-ranking">{{value}}</view>
    </view>
</block>
<!-- 黑珍珠 -->
<block wx:if="{{type === 'black-pearl'}}">
    <view class="seed-tag seed-tag-{{type}}"></view>
</block>
<!-- 必吃榜，必住榜，必逛榜，必玩榜 -->
<block wx:if="{{type === 'must-eat-list' || type === 'must-live-list' || type === 'must-stroll-list' || type === 'must-play-list'}}">
    <view class="seed-tag seed-tag-{{type}}"></view>
</block>
<!-- 主要 -->
<block wx:if="{{type === 'primary'}}">
    <view class="seed-tag seed-tag-{{type}} seed-tag-{{type}}-{{size}}"><slot></slot></view>
</block>
<!-- 主要 -->
<block wx:if="{{type === 'disabled'}}">
    <view class="seed-tag seed-tag-{{type}} seed-tag-{{type}}-{{size}}"><slot></slot></view>
</block>
